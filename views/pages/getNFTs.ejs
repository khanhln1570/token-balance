<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
      <link rel="stylesheet" href="/style.css">
  </header>

  <main>
    <div class="jumbotron">
      <h1>Find NFTs</h1>

      <%if(!images) { %>
        <form method="get" action="/nft/getNFTs">
          <input id="walletAddress" type="text" name="walletAddress" placeholder="Wallet address..." required>
          <input type="submit" value="Find">
        </form>
        <% }else {%>
          <h2>Polygon chain</h2>
          <ul>
            <% images.imagesPolygon.forEach(function(image) { %>
              <li>
                <img src=<%=image %> width=250 height=250 onclick="callZekeke(`<%= image %>`)" data-toggle="modal"
                  data-target=".bd-example-modal-sm">
              </li>
              <% }); %>
          </ul>
          <br>
          <h2>Ethereum chain</h2>
          <ul>
            <% images.imagesEth.forEach(function(image) { %>
              <li>
                <img src=<%=image %> width=250 height=250 onclick="callZekeke(`<%= image %>`)" data-toggle="modal"
                  data-target=".bd-example-modal-sm">
              </li>
              <% }); %>
          </ul>
          <% }%>

    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>
</body>

</html>